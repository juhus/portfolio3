body{
    background:#000;
    background-image: url(<%= asset_path('wallpaper1.jpg') %>);
    background-size: 100%;
    background-repeat:no-repeat;
    background-attachment:fixed;
    background-position: 0 -200px; 
    font-size: 14px;
    font-family: 'Arial';
    color: #ccc;
    margin:0;
    padding:0;
    }

.debug_dump {
    color: #333;
    position: absolute;
    right:10px;
    padding: 8px;
}

ul {
    padding:0;
}

a, a:visited {
    text-decoration:none;
    color:inherit;
}

header{
    font-size:16px;
    font-weight:bold;
    color:#fff;
    margin-bottom:8px;
    text-shadow: 0 1px 0 #ccc;
}

input,select{
    position:relative;
    margin:3px 3px 6px 0;
}

textarea {
    height:50px;
}

ul#codes li, ul#portfolios li, ul#websites li {
    position:static;
    margin:3px;
    padding:6px;
    display:block;
    background: rgba(75,75,75,0.95);
    -webkit-border-radius:2px;
    -moz-border-radius:2px;
    border-radius:2px;
    color:#fff;
    -webkit-box-shadow: 0 0 8px #000;
    -moz-box-shadow: 0 0 8px #000;
    box-shadow: 0 0 8px #000;
}


.newform{
    clear:both;
}
.drag{
    margin:0;
    width:100%;
    height:100%;
    background:rgba(0,0,0,0);
    position:absolute;
    top:0;
    left:0;
}
#opensesame {
    position: absolute;
    top:40px;
    left: 360px;
}
#adminbar{
    position:fixed;
    z-index:3;
    top:15px;
    left:20px;
    display:inline;
    max-width:100%;
    min-width:560px;
}
#panelcode{
    position:absolute;
    top:40px;
    left:5px;
    z-index:1;
}
#panelportfolio{
    position:absolute;
    top:240px;
    left:5px;
    z-index:1;
}
#panelhelp, #panelsetting, #paneluser, #panelwebsite{
    position:absolute;
    top:40px;
    left:5px;
    z-index:2;
    display:none;
}
.hide{
    font-size:10px;
    position:absolute;
    right: 5px;
    top:3px;
}
.adminbarhandle{
    display:block;
    color:inherit; 
    cursor:move; 
    position:absolute;
    right:2%;
    }
ul#portfolios .handle {
    font-size: 12px; 
    color: #777; 
    cursor: move;
}
.panel{
    float:right;
    position:absolute;
    margin: 15px 0 0 15px;
    min-width:320px;
    max-width:800px;
    display:inline;
    -webkit-border-radius:4px;
    -moz-border-radius:4px;
    border-radius:4px;
    -webkit-box-shadow: 0 0 8px #000;
    -moz-box-shadow: 0 0 8px #000;
    box-shadow: 0 0 8px #000;
    background: rgba(0,0,0,0.75);
    padding:8px;
    border:1px solid #0e0e0e;
    z-index:2;
}
.box {
    margin: 50px auto;
    width: 300px;
    height: 156px;
    -webkit-border-radius:2px;
    -moz-border-radius:2px;
    border-radius:2px;
    text-align: center;
    -webkit-box-shadow: 2px 2px 8px #555;
    -moz-box-shadow:2px 2px 8px #555;
    box-shadow:2px 2px 8px #555;
    padding:10px;
    background: rgba(250,250,250,0.95);
    }
.bar {
    opacity:1;
    height:30px;
    padding: 0 3px 0 5px;
    border:1px solid #444;
    -webkit-border-radius:6px;
    -moz-border-radius:6px;
    border-radius:6px;
    -webkit-box-shadow: 0 0 2px rgba(200,200,200,0.75);
    -moz-box-shadow: 0 0 2px rgba(200,200,200,0.75); 
    box-shadow: 0 0 2px rgba(200,200,200,0.75);
    background-image: linear-gradient(bottom, rgb(51,51,51) 0%, rgb(107,107,107) 50%, rgb(143,143,143) 100%);
    background-image: -o-linear-gradient(bottom, rgb(51,51,51) 0%, rgb(107,107,107) 50%, rgb(143,143,143) 100%);
    background-image: -moz-linear-gradient(bottom, rgb(51,51,51) 0%, rgb(107,107,107) 50%, rgb(143,143,143) 100%);
    background-image: -webkit-linear-gradient(bottom, rgb(51,51,51) 0%, rgb(107,107,107) 50%, rgb(143,143,143) 100%);
    background-image: -ms-linear-gradient(bottom, rgb(51,51,51) 0%, rgb(107,107,107) 50%, rgb(143,143,143) 100%);
}

input[type="text"].signin,input[type="password"].signin {
    width:90%;
    color:#fff;
    text-align:center;
    border:none;
    background:#ffccdd;
    height:24px;
    font-size:14px;
    -webkit-border-radius:2px;
    -moz-border-radius:2px;
    border-radius:2px;
    -webkit-box-shadow: inset 0 0 5px #555;
    -moz-box-shadow: inset 0 0 5px #555;
    box-shadow: inset 0 0 5px #555;
    }

input[type="submit"].signin{
    color:#fff;
    width:90%;
    height: 24px;
    border:none;
    -webkit-border-radius:2px;
    -moz-border-radius:2px;
    border-radius:2px;
    -webkit-box-shadow: 0px 6px 0px #FA7FB5;
    -moz-box-shadow: 0px 6px 0px #FA7FB5;
    box-shadow: 0px 6px 0px #FA7FB5;
    background-image: linear-gradient(bottom, rgb(219,44,96) 10%, rgb(237,30,120) 80%);
    background-image: -moz-linear-gradient(bottom, rgb(219,44,96) 10%, rgb(237,30,120) 80%);
    background-image: -webkit-linear-gradient(bottom, rgb(219,44,96) 10%, rgb(237,30,120) 80%);
    -webkit-transition: .05s ease-in-out;
    -moz-transition: .05s ease-in-out;
    transition: .05s ease-in-out;
    &:hover{
    -webkit-transform: translate(0, 4px);
    -moz-transform: translate(0, 4px);
    transform: translate(0, 4px);
    -webkit-box-shadow: 0px 2px 0px #FA7FB5;
    -moz-box-shadow: 0px 2px 0px #FA7FB5;
    box-shadow: 0px 2px 0px #FA7FB5;
    background-image: linear-gradient(bottom, rgb(219,44,96) 40%, rgb(214,51,124) 100%);
    background-image: -moz-linear-gradient(bottom, rgb(219,44,96) 40%, rgb(214,51,124) 100%);
    background-image: -webkit-linear-gradient(bottom, rgb(219,44,96) 40%, rgb(214,51,124) 100%);
    }
}

#error_explanation, .alert, .alert-error, .alert-success {
    color:#fff;
    background:rgba(0,0,0,0.3);
    position:static;
    bottom:5px;
    right:0;
    padding:3px;
    -webkit-border-radius:2px;
    -moz-border-radius:2px;
    border-radius:2px;
    float:right;
    margin: 3px 0 3px 0;
    clear:right;
}

#explorer {
  width:200px;
  height: 400px;
  background:rgba(100,100,100,0.5);
  position: absolute;
  left:20px;
  top:80px;
}

#logo{
    display:none;
    background: url(<%= asset_path('logo.png') %>);
    width:25px;
    height:25px;
    margin: 7px;
    float:left;
    -webkit-transition: .05s ease-in-out;
    -moz-transition: .05s ease-in-out;
    transition: .05s ease-in-out;     
    &:hover, &:focus{
        background-position: 0 -25px;
    }
    }

.control-panel{
    font-size: 18px;
    font-weight:bold;
    color:#222;
    text-shadow: 0 1px 1px #777;
    margin-top: 3px;
    float:left;  
    }

section ul{
    list-style-type:none;
}

.control-panel li{
    float:left;
    display:inline;
    margin-left:15px;
    text-transform:lowercase;
    }

.control-panel li:hover, .control-panel li:focus, .admintitle:hover {
    color:#fff;
    cursor:pointer;
    -webkit-transition: .1s ease-in-out;
    -moz-transition: .1s ease-in-out;
    transition: .1s ease-in-out; 
    }
    
.selected {
    color:#ddd;
}

.group:before,
.group:after {
content: "";
display: table;
}
.group:after {
clear: both;
}
.group {
zoom: 1; /* IE6&7 */
}

