body{
    background:#fff;
    font-size: 14px;
    font-family: 'Arial';
    }

.ui-resizable-helper { border: 2px dotted #00F; }

ul {
    padding:0;
}

a, a:visited {
    text-decoration:none;
    color:inherit;
}

header{
    font-size:16px;
    font-weight:bold;
    color:#fff;
    margin-bottom:8px;
    text-shadow: 0 1px 0 #ccc;
}

input,select{
    margin:3px 3px 6px 0;
}

textarea {
    height:50px;
}

ul#codes li, ul#portfolios li, ul#websites li {
    margin:3px;
    padding:6px;
    display:block;
    background: rgba(240,240,240,0.3);
    -webkit-border-radius:2px;
    -moz-border-radius:2px;
    border-radius:2px;
    color:#fff;
}

.newform{
    clear:both;
}

.drag{
    margin:0;
    width:100%;
    height:100%;
    background:rgba(0,0,0,0);
    position:absolute;
    top:0;
    left:0;
}

#opensesame {
    position: absolute;
    top:40px;
    left: 360px;
}

.panel{
    float:right;
    position:absolute;
    margin: 15px 0 0 15px;
    min-width:320px;
    max-width: 800px;
    display:inline;
    background:rgba(100,100,100,0.9);
    -webkit-border-radius:4px;
    -moz-border-radius:4px;
    border-radius:4px;
    -webkit-box-shadow: 2px 2px 8px #555;
    -moz-box-shadow:2px 2px 8px #555;
    box-shadow:2px 2px 8px #555;
    padding:8px;
    border:1px solid #777;
    z-index:2;
}

#adminbar{
    position:fixed;
    z-index:3;
    top:15px;
    left:20px;
    display:inline;
}

#panelcode{
    position:absolute;
    top:40px;
    left:5px;
    z-index:1;
}

#panelportfolio{
    position:absolute;
    top:205px;
    left:5px;
    z-index:1;
}

#panelhelp, #panelsetting, #paneluser, #panelwebsite{
    position:absolute;
    top:40px;
    left:5px;
    z-index:2;
    display:none;
}

.hide{
    font-size:10px;
    position:absolute;
    right: 5px;
    top:3px;
}

.box {
    margin: 50px auto;
    width: 300px;
    height: 156px;
    -webkit-border-radius:2px;
    -moz-border-radius:2px;
    border-radius:2px;
    text-align: center;
    -webkit-box-shadow: 2px 2px 8px #555;
    -moz-box-shadow:2px 2px 8px #555;
    box-shadow:2px 2px 8px #555;
    padding:10px;
    background-image: linear-gradient(bottom, rgb(189,189,189) 0%, rgb(235,235,235) 100%);
    background-image: -o-linear-gradient(bottom, rgb(189,189,189) 0%, rgb(235,235,235) 100%);
    background-image: -moz-linear-gradient(bottom, rgb(189,189,189) 0%, rgb(235,235,235) 100%);
    background-image: -webkit-linear-gradient(bottom, rgb(189,189,189) 0%, rgb(235,235,235) 100%);
    background-image: -ms-linear-gradient(bottom, rgb(189,189,189) 0%, rgb(235,235,235) 100%);

    background-image: -webkit-gradient(
    linear,
    left bottom,
    left top,
    color-stop(0, rgb(189,189,189)),
    color-stop(1, rgb(235,235,235))
    );
    }

input[type="text"].signin,input[type="password"].signin {
    width:90%;
    color:#fff;
    text-align:center;
    border:none;
    background:#3FA9F5;
    height:24px;
    font-size:18px;
    -webkit-border-radius:2px;
    -moz-border-radius:2px;
    border-radius:2px;
    -webkit-box-shadow: inset 0 0 5px #555;
    -moz-box-shadow: inset 0 0 5px #555;
    box-shadow: inset 0 0 5px #555;
    }

input[type="submit"].signin{
    color:#fff;
    width:90%;
    height: 24px;
    border:none;
    -webkit-border-radius:2px;
    -moz-border-radius:2px;
    border-radius:2px;
    -webkit-box-shadow: 0px 6px 0px #FA7FB5;
    -moz-box-shadow: 0px 6px 0px #FA7FB5;
    box-shadow: 0px 6px 0px #FA7FB5;
    background-image: linear-gradient(bottom, rgb(219,44,96) 10%, rgb(237,30,120) 80%);
    background-image: -moz-linear-gradient(bottom, rgb(219,44,96) 10%, rgb(237,30,120) 80%);
    background-image: -webkit-linear-gradient(bottom, rgb(219,44,96) 10%, rgb(237,30,120) 80%);
    -webkit-transition: .05s ease-in-out;
    -moz-transition: .05s ease-in-out;
    transition: .05s ease-in-out;
    &:hover{
    -webkit-transform: translate(0, 4px);
    -moz-transform: translate(0, 4px);
    transform: translate(0, 4px);
    -webkit-box-shadow: 0px 2px 0px #FA7FB5;
    -moz-box-shadow: 0px 2px 0px #FA7FB5;
    box-shadow: 0px 2px 0px #FA7FB5;
    background-image: linear-gradient(bottom, rgb(219,44,96) 40%, rgb(214,51,124) 100%);
    background-image: -moz-linear-gradient(bottom, rgb(219,44,96) 40%, rgb(214,51,124) 100%);
    background-image: -webkit-linear-gradient(bottom, rgb(219,44,96) 40%, rgb(214,51,124) 100%);
    }
}

#error_explanation, .alert, .alert-error {
    color:#fff;
    background:rgba(0,0,0,0.3);
    position:static;
    bottom:5px;
    right:0;
    padding:3px;
    -webkit-border-radius:2px;
    -moz-border-radius:2px;
    border-radius:2px;
    float:right;
    margin: 3px 0 3px 0;
    clear:right;
}

.bar {
  opacity:0.9;
  height:30px;
  padding: 0 3px 0 5px;
  border:1px solid #555;
  -webkit-border-radius:3px;
  -moz-border-radius:3px;
  border-radius:3px;
  -webkit-box-shadow: 1px 1px 5px #555;
  -moz-box-shadow: 1px 1px 5px #555;
  box-shadow: 1px 1px 5px #555;
  background-image:-webkit-gradient(linear, 0% 0%, 0% 100%, from(#777), to(#555));
  background-image:-moz-linear-gradient(100% 0% 90deg,#777, #555);
  background-image:linear-gradient(#777, #555);
}

#explorer {
  width:200px;
  height: 400px;
  background:rgba(100,100,100,0.5);
  position: absolute;
  left:20px;
  top:80px;
}

#logo{
    display:none;
    background: url(<%= asset_path('logo.png') %>);
    width:25px;
    height:25px;
    margin: 7px;
    float:left;
    -webkit-transition: .05s ease-in-out;
    -moz-transition: .05s ease-in-out;
    transition: .05s ease-in-out;     
    &:hover, &:focus{
        background-position: 0 -25px;
    }
    }

.control-panel{
    font-size: 18px;
    font-weight:bold;
    color:#222;
    text-shadow: 0 1px 1px #777;
    margin-top: 3px;
    float:left;  
    }

section ul{
    list-style-type:none;
}

.control-panel li{
    float:left;
    display:inline;
    margin-left:15px;
    text-transform:lowercase;
    }

.control-panel li:hover, .control-panel li:focus, .admintitle:hover {
    color:#fff;
    cursor:pointer;
    -webkit-transition: .1s ease-in-out;
    -moz-transition: .1s ease-in-out;
    transition: .1s ease-in-out; 
    }
    
.selected {
    color:#ddd;
}


@media screen and (max-width:640px){
  .item {
    width:150px;
    height:150px;
    }    
  }

  

@media screen and (max-width:320px){
  .item {
    width:90px;
    height:90px;
    margin-top:5%;
    margin-left:5%;
    }

  button {
    width:100%;
    color:#fff;
    font-weight:bold;
    padding:2%;
    }
}
