        <%= link_to '| view', view_path(@website.title, portfolio.permalink) if portfolio.publish == true %>
        <%= link_to '| edit', edit_website_portfolio_path(@website, portfolio), remote: true  %>
		<%= link_to '| delete', website_portfolio_path(@website, portfolio), method: :delete, remote: true  %>
    </li>
<% end %>